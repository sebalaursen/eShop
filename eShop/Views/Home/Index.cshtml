                        <a asp-controller="Home" asp-action="Product"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a asp-controller="Home" asp-action="Product">@p.Title</a>
                            </h4>
                            <h5>@p.Price.ToString("c")</h5>
                            <p class="card-text">@p.Description</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted"></small>
                        </div>
                    </div>
                </div>
                }
