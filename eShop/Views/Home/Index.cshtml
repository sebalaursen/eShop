            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">

        <div class="col-lg-3">

            <div class="border p-4 rounded mt-2">
                <h4 class="mb-3">Search by Name</h4>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-search"></i> </span>
                    </div>
                    <input name="SearchField" class="form-control" placeholder="Search">
                </div>
            </div>

            <div class="border p-4 rounded mt-2">
                <h4 class="mb-3">Shop Name</h4>
                <div class="list-group">
                    <a href="#" class="list-group-item">Category 1</a>
                    <a href="#" class="list-group-item">Category 2</a>
                    <a href="#" class="list-group-item">Category 3</a>
                </div>
            </div>

            <div class="border p-4 rounded mt-2">
                <h4 class="mb-3">Filter options</h4>
                <select class="custom-select" style="max-width: 220px;">
                    <option selected=""></option>
                    <option value="1">Highest to lowet price</option>
                    <option value="2">Lowest to highest price</option>
                    <option value="3">Popularity</option>
                    <option value="4">Raiting</option>
                </select>
            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div class="row">

                @model IEnumerable<eShop.Models.Product.ProductInfo>

                @foreach (var p in Model)
